<main id="main" class="main">
    <div class="pagetitle">
        <h1>Pedidos</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                <li class="breadcrumb-item">Pedidos</li>
                <li class="breadcrumb-item active">Todos</li>
            </ol>
        </nav>
    </div>
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Todos los pedidos</h5>
                        <div class="dataTable-wrapper dataTable-loading no-footer sortable searchable fixed-columns">
                            <div class="dataTable-container">
                                <table class="table datatable dataTable-table">
                                    <thead>
                                        <tr>
                                            <th scope="col" data-sortable="" style="width: 5.57895%;"><a href="#"
                                                    class="datatable-sorter">#</a></th>
                                            <th scope="col" data-sortable="" style="width: 27.8947%;"><a href="#"
                                                    class="datatable-sorter">Fecha</a></th>
                                            <th scope="col" data-sortable="" style="width: 37.0526%;"><a href="#"
                                                    class="datatable-sorter">Procesado</a></th>
                                            <th scope="col" data-sortable="" style="width: 9.68421%;"><a href="#"
                                                    class="datatable-sorter">Enviado</a></th>
                                            <th scope="col" data-sortable="" style="width: 19.7895%;"><a href="#"
                                                    class="datatable-sorter">Acciones</a></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each pedidoObj}}
                                        <tr>
                                            <th scope="row">{{idcorrelativo}}</th>
                                            <td><span class="date">{{fecha}}</span></td>
                                            {{#if cancelado includeZero=false}}
                                            <td><span class="badge bg-danger">Cancelado</span></td>
                                            <td><span class="badge bg-danger">Cancelado</span></td>
                                            {{else}}
                                                    {{#if procesado includeZero=false}}
                                                    <td><span class="badge bg-success">Correcto</span></td>
                                                    {{else}}
                                                    <td><span class="badge bg-secondary">En espera</span></td>
                                                    {{/if}}
                                                    {{#if enviado includeZero=false}}
                                                    <td><span class="badge bg-success">Correcto</span></td>
                                                    {{else}}
                                                    <td><span class="badge bg-secondary">En espera</span></td>
                                                    {{/if}}
                                            {{/if}}
                                            <td>
                                                <a href="/pedido/{{id}}" class="btn btn-primary"><i class="bi bi-search"></i> Ver</a>
                                                <a href="/cancelar/pedido/{{id}}" class="btn btn-danger"><i class="bi bi-clipboard-minus"></i> Cancelar</a>
                                            </td>
                                        </tr>
                                        {{else}}
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>